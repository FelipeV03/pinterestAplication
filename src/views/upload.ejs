<%- include ('partials/header')%>
<%- include('partials/navegation') %>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-body">

                        <form action="/upload" method="post" enctype="multipart/form-data">
                            <div class="input-group mb-3 mt-4">
                                <div class="custom-file">
                                    <input type="file" name="image" class="form-control" id="inputGroupFile02" required>
                                    <!-- <label class="input-group-text" for="inputGroupFile02">Upload</label> -->
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="text" name="title" placeholder="Titulo" class="form-control" required>
                            </div>

                            <div class="form-group mt-4">
                                <textarea name="descripcion" class="form-control" placeholder="Descripcion"
                                    required></textarea>
                            </div>

                            <div class="form-group d-grid mt-4">
                                <button class="btn btn-success" type="submit">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('partials/footer')%>